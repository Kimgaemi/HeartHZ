<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="190px"
        android:background="@color/action_bar_base" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_toolbar_btn"
                android:layout_width="126px"
                android:layout_height="126px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28px"
                android:onClick="toolbarClick" />

            <ImageView
                android:id="@+id/iv_toolbar_logo"
                android:layout_width="225px"
                android:layout_height="80px"
                android:layout_gravity="center"
                android:layout_marginRight="371px" />

            <ImageView
                android:id="@+id/iv_toolbar_back"
                android:layout_width="126px"
                android:layout_height="126px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="450px"
                android:onClick="toolbarClick" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

</LinearLayout>