<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.heart.activity.SignInActivity" >

    <RelativeLayout
        android:id="@+id/page1_container"
        android:layout_width="1440px"
        android:layout_height="2310px" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="698px"
            android:layout_height="376px"
            android:layout_marginLeft="448px"
            android:layout_marginTop="744px" />

        <LinearLayout
            android:id="@+id/usernameLayout"
            android:layout_width="1048px"
            android:layout_height="127px"
            android:layout_below="@+id/imageView1"
            android:layout_marginLeft="196px"
            android:layout_marginTop="247px"
            android:background="@color/username_edittext_color"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/userImageView"
                android:layout_width="106px"
                android:layout_height="106px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="23px"
                android:layout_marginRight="23px" />

            <View
                android:layout_width="1px"
                android:layout_height="79px"
                android:layout_marginTop="24px"
                android:background="#6B6B6B" />

            <EditText
                android:id="@+id/edit_signin_phone"
                android:layout_width="616px"
                android:layout_height="90px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="62px"
                android:background="@android:color/transparent"
                android:hint="Phone number"
                android:singleLine="true"
                android:textColorHint="@color/edit_text_hint"
                android:textSize="61px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordLayout"
            android:layout_width="1048px"
            android:layout_height="127px"
            android:layout_below="@+id/usernameLayout"
            android:layout_marginLeft="196px"
            android:layout_marginTop="33px"
            android:background="@color/password_edittext_color"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/pwImageView"
                android:layout_width="106px"
                android:layout_height="106px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="23px"
                android:layout_marginRight="23px" />

            <View
                android:layout_width="1px"
                android:layout_height="79px"
                android:layout_marginTop="24px"
                android:background="#6B6B6B" />

            <EditText
                android:id="@+id/edit_signin_pw"
                android:layout_width="616px"
                android:layout_height="90px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="62px"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:singleLine="true"
                android:textColorHint="@color/edit_text_hint"
                android:textSize="61px" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="306px"
            android:text="Create Account"
            android:textColor="@color/create_account"
            android:textSize="61px" >
        </TextView>

        <TextView
            android:id="@+id/tv_forgot_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="170px"
            android:text="Forgot Your Password ?"
            android:textColor="@color/forgot_account"
            android:textSize="61px" >
        </TextView>
    </RelativeLayout>

    <Button
        android:id="@+id/login_btn"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:background="@drawable/basic_button_style"
        android:text="LOGIN"
        android:textColor="@color/login_btn_text_color"
        android:textSize="70px" >
    </Button>

</LinearLayout>