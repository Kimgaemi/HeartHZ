<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="202px"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="202px"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/musictag1_container1"
            android:layout_width="287px"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true" >

            <RelativeLayout
                android:layout_width="287px"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/tv_musictag_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="NO"
                    android:textColor="@color/musictag_not_focus_num"
                    android:textSize="65px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="287px"
                android:layout_height="fill_parent" >

                <ImageView
                    android:id="@+id/iv_musictag_pause"
                    android:layout_width="105px"
                    android:layout_height="82px"
                    android:layout_centerInParent="true"
                    android:visibility="invisible" />
            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/musictag1_container2"
            android:layout_width="936px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/musictag1_container1" >

            <LinearLayout
                android:layout_width="936px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_musictag_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TITLE"
                    android:textColor="@color/musictag_not_focus_title"
                    android:textSize="66px" />

                <TextView
                    android:id="@+id/tv_musictag_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message Nam"
                    android:textColor="@color/musictag_not_focus_singer"
                    android:textSize="44px" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="217px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/musictag1_container2" >

            <ImageView
                android:id="@+id/iv_musictag_playing"
                android:layout_width="105px"
                android:layout_height="82px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mlequal"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>